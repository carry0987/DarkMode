{
  "name": "@carry0987/darkmode",
  "version": "1.2.1",
  "description": "A simple and lightweight JavaScript library for dark mode toggle with localStorage support.",
  "type": "module",
  "main": "dist/darkMode.min.js",
  "module": "dist/darkMode.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "umd": "./dist/darkMode.min.js",
      "import": "./dist/darkMode.esm.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.{ts,scss}\" \"test/**/*.ts\"",
    "start": "rollup --config rollup.config.ts --configPlugin typescript",
    "build": "rollup --config rollup.config.ts --configPlugin typescript --environment BUILD:production",
    "test": "vitest run"
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carry0987/DarkMode.git"
  },
  "keywords": [
    "darkmode"
  ],
  "author": "carry0987",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carry0987/DarkMode/issues"
  },
  "homepage": "https://github.com/carry0987/DarkMode#readme",
  "devDependencies": {
    "@carry0987/utils": "^3.8.2",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "happy-dom": "^15.7.4",
    "prettier": "^3.3.3",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
